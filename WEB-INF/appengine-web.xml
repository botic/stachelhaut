<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">

	<application>seesternstachelhaut</application>
	<version>1</version>

	<!-- Configure java.util.logging -->
	<system-properties>
		<property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
	</system-properties>
	<precompilation-enabled>true</precompilation-enabled>
	<sessions-enabled>true</sessions-enabled>
	<threadsafe>true</threadsafe>

   <static-files>
      <include path="/static/**" expiration="365d" />
      <include path="/favicon.ico" expiration="365d" />
      <exclude path="/tests/*" />
      <exclude path="/build.xml" />
      <exclude path="/README.md" />
      <exclude path="/LICENSE" />
   </static-files>

   <automatic-scaling>
      <min-idle-instances>1</min-idle-instances>
      <max-idle-instances>5</max-idle-instances>
      <min-pending-latency>automatic</min-pending-latency>
      <max-pending-latency>500ms</max-pending-latency>
   </automatic-scaling>

</appengine-web-app>
